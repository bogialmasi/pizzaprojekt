<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/cim"
        android:layout_width="292dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:fontFamily="cursive"
        android:text="Hová szállíthatjuk?"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/irsz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:hint="Irányítószám"
        android:inputType="number"
        android:textColor="#FF9800"/>

    <EditText
        android:id="@+id/telepules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/irsz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:hint="Település"
        android:textColor="#FF9800" />

    <EditText
        android:id="@+id/hazszam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telepules"
        android:layout_centerInParent="true"
        android:layout_marginTop="59dp"
        android:hint="Utca/Házszám"
        android:textColor="#FF9800" />

    <TextView
        android:id="@+id/pizzam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hazszam"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pizzam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pizzam1"
        android:fontFamily="monospace"
        android:textSize="20dp" />

    <Button
        android:id="@+id/megrendeles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizzam2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Megrendelés"
        app:backgroundTint="#FF9800" />

</RelativeLayout>